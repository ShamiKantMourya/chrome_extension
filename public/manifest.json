{
  "manifest_version": 3,
  "name": "Offline Tic-Tac-Toe",
  "version": "1.0",
  "description": "Play Tic-Tac-Toe offline using a Chrome extension.",
  "permissions": ["storage"],
  "icons": {
    "16": "tictactoe48.png",
    "48": "tictactoe48.png",
    "128": "tictactoe128.png"
  },
  "offline_enabled": true,
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "tictactoe48.png",
      "48": "tictactoe48.png",
      "128": "tictactoe128.png"
    }
  }
}
